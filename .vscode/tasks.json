{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ruff: Lint on Open",
            "type": "shell",
            "command": "conda run -n larsnet-midi ruff check . --output-format=concise || exit 0",
            "problemMatcher": {
                "owner": "ruff",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):\\s+(\\w+)\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "close": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
